<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:layout_editor_absoluteY="25dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/dp64w"
        android:layout_height="@dimen/dp55h"
        android:layout_marginTop="@dimen/dp56h"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="@dimen/dp33w"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Sign up to Nabbta"
        android:textColor="@color/text_color_green"
        android:textSize="@dimen/sp21"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="@dimen/dp22w"
        android:layout_height="@dimen/dp22h"
        android:layout_marginStart="@dimen/dp26w"
        android:layout_marginTop="@dimen/dp33h"
        android:src="@drawable/user_icon"
        app:layout_constraintStart_toEndOf="@+id/imageView12"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="@dimen/dp199w"
        android:layout_height="wrap_content"
        android:textCursorDrawable="@null"
        android:layout_marginStart="8dp"
        android:hint="@string/first_name"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sp10"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintStart_toEndOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/imageView7" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="@dimen/dp22w"
        android:layout_height="@dimen/dp22h"
        android:layout_marginTop="@dimen/dp26h"
        android:src="@drawable/user_icon"
        app:layout_constraintEnd_toEndOf="@+id/imageView7"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toBottomOf="@+id/imageView7" />

    <EditText
        android:layout_width="@dimen/dp199w"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:hint="@string/last_name"
        android:textCursorDrawable="@null"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sp10"
        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
        app:layout_constraintStart_toEndOf="@+id/imageView8"
        app:layout_constraintTop_toTopOf="@+id/imageView8" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="@dimen/dp23w"
        android:layout_height="@dimen/dp19h"
        android:layout_marginTop="@dimen/dp26h"
        android:src="@drawable/mail_icon"
        app:layout_constraintEnd_toEndOf="@+id/imageView8"
        app:layout_constraintStart_toStartOf="@+id/imageView8"
        app:layout_constraintTop_toBottomOf="@+id/imageView8" />

    <EditText
        android:layout_width="@dimen/dp199w"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:hint="@string/email_address"

        android:textCursorDrawable="@null"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sp10"
        app:layout_constraintBottom_toBottomOf="@+id/imageView9"
        app:layout_constraintStart_toEndOf="@+id/imageView9"
        app:layout_constraintTop_toTopOf="@+id/imageView9"
        android:inputType="textEmailAddress"/>

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="@dimen/dp15w"
        android:layout_height="@dimen/dp21h"
        android:layout_marginTop="@dimen/dp26h"
        android:src="@drawable/password_icon"
        app:layout_constraintEnd_toEndOf="@+id/imageView9"
        app:layout_constraintStart_toStartOf="@+id/imageView9"
        app:layout_constraintTop_toBottomOf="@+id/imageView9" />


    <EditText
        android:layout_width="@dimen/dp199w"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:hint="@string/password"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sp10"
        android:textCursorDrawable="@null"
        app:layout_constraintBottom_toBottomOf="@+id/imageView10"
        app:layout_constraintStart_toEndOf="@+id/imageView10"
        app:layout_constraintTop_toTopOf="@+id/imageView10"
        android:inputType="textPassword"/>

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="@dimen/dp15w"
        android:layout_height="@dimen/dp21h"
        android:layout_marginTop="@dimen/dp26h"
        android:src="@drawable/password_icon"
        app:layout_constraintEnd_toEndOf="@+id/imageView10"
        app:layout_constraintStart_toStartOf="@+id/imageView10"
        app:layout_constraintTop_toBottomOf="@+id/imageView10" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="@dimen/dp199w"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:hint="@string/password_confirmation"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sp10"
        android:textCursorDrawable="@null"
        app:layout_constraintBottom_toBottomOf="@+id/imageView11"
        app:layout_constraintStart_toEndOf="@+id/imageView11"
        app:layout_constraintTop_toTopOf="@+id/imageView11"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="@dimen/dp117w"
        android:layout_height="@dimen/dp32h"
        android:layout_marginTop="@dimen/dp30h"
        android:background="@drawable/button_shape"
        android:text="@string/next"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp15_5"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView12"
        app:layout_constraintTop_toBottomOf="@+id/editText3" />

    <View
        android:id="@+id/view"
        android:layout_width="@dimen/dp104w"
        android:layout_height="9dp"
        android:layout_marginTop="@dimen/dp15h"
        android:background="@drawable/progress_bar_shape"
        app:layout_constraintEnd_toEndOf="@+id/button2"
        app:layout_constraintStart_toStartOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/button2" />
    <View
        android:layout_width="@dimen/dp52w"
        android:layout_height="9dp"
        android:background="@drawable/progress_bar_shape"
        android:backgroundTint="@color/text_color_green"
        app:layout_constraintTop_toTopOf="@id/view"
        app:layout_constraintBottom_toBottomOf="@id/view"
        app:layout_constraintStart_toStartOf="@id/view"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Step 1"
        android:textColor="@color/text_color_green"
        android:textSize="@dimen/sp10_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view"
        android:layout_marginTop="10dp"/>

</android.support.constraint.ConstraintLayout>
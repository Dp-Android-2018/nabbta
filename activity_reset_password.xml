<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/dp64w"
        android:layout_height="@dimen/dp55h"
        android:layout_marginTop="@dimen/dp56h"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Sign in to Nabbta"
        android:textColor="@color/text_color_green"
        android:textSize="@dimen/sp21"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="@dimen/dp15w"
        android:layout_height="@dimen/dp21h"
        android:layout_marginStart="@dimen/dp47w"
        android:layout_marginTop="@dimen/dp47h"
        android:src="@drawable/password_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView" />


    <EditText
        android:layout_width="@dimen/dp199w"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:textColor="@android:color/black"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/sp10"
        app:layout_constraintBottom_toBottomOf="@+id/imageView10"
        app:layout_constraintStart_toEndOf="@+id/imageView10"
        app:layout_constraintTop_toTopOf="@+id/imageView10" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="@dimen/dp15w"
        android:layout_height="@dimen/dp21h"
        android:layout_marginTop="@dimen/dp26h"
        android:src="@drawable/password_icon"
        app:layout_constraintEnd_toEndOf="@+id/imageView10"
        app:layout_constraintStart_toStartOf="@+id/imageView10"
        app:layout_constraintTop_toBottomOf="@+id/imageView10" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="@dimen/dp199w"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:hint="@string/password_confirmation"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sp10"
        android:textCursorDrawable="@null"
        app:layout_constraintBottom_toBottomOf="@+id/imageView11"
        app:layout_constraintStart_toEndOf="@+id/imageView11"
        app:layout_constraintTop_toTopOf="@+id/imageView11"
        android:inputType="textPassword"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp38h"
        android:background="@color/text_color_green"
        android:text="@string/pass_text"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="@dimen/sp18"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



</android.support.constraint.ConstraintLayout>
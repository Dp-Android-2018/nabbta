<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/dp64w"
            android:layout_height="@dimen/dp55h"
            android:layout_marginTop="@dimen/dp56h"
            android:src="@drawable/logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="@dimen/dp33w"
        android:layout_height="match_parent"
        android:src="@drawable/signup"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="signupClick"/>
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="Sign in to Nabbta"
            android:textColor="@color/text_color_green"
            android:textSize="@dimen/sp21"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/dp23w"
            android:layout_height="@dimen/dp19h"
            android:layout_marginStart="@dimen/dp29w"
            android:layout_marginTop="@dimen/dp48h"
            android:src="@drawable/mail_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <EditText
            android:layout_width="@dimen/dp199w"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:hint="@string/email_phone"
            android:textCursorDrawable="@null"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp10"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            android:inputType="textEmailAddress"/>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="@dimen/dp15w"
            android:layout_height="@dimen/dp21h"
            android:layout_marginTop="@dimen/dp28h"
            android:src="@drawable/password_icon"
            app:layout_constraintEnd_toEndOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="@dimen/dp199w"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:hint="@string/password"
            android:textCursorDrawable="@null"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp10"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="@+id/imageView3"
            android:inputType="textPassword"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="@dimen/dp19h"
            android:layout_marginEnd="8dp"
            android:text="@string/forget_password"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dp10h"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText" />

        <Button
            android:id="@+id/button"
            android:layout_width="@dimen/dp117w"
            android:layout_height="@dimen/dp32h"
            android:layout_marginTop="@dimen/dp27h"
            android:background="@drawable/button_shape"
            android:text="Login"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp15_5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="@dimen/dp31w"
            android:layout_height="@dimen/dp31h"
            android:layout_marginEnd="@dimen/dp15w"
            android:src="@drawable/facebook"
            app:layout_constraintBottom_toBottomOf="@+id/imageView4"
            app:layout_constraintEnd_toStartOf="@+id/imageView4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/button"
            app:layout_constraintTop_toTopOf="@+id/imageView4" />
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="@dimen/dp31w"
            android:layout_height="@dimen/dp31h"
            android:layout_marginStart="@dimen/dp15w"
            android:layout_marginTop="@dimen/dp40h"
            android:src="@drawable/twitter"
            app:layout_constraintEnd_toEndOf="@+id/button"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageView5"
            app:layout_constraintTop_toBottomOf="@+id/button" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp27w"
            android:text="Skip"
            android:textColor="@color/text_color_green"
            android:textSize="@dimen/sp17"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/imageView6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView6"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="@dimen/dp15w"
            android:layout_height="@dimen/dp19h"
            android:layout_marginBottom="@dimen/dp21h"
            android:src="@drawable/right_chevron"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView5" />

    <com.cunoraz.gifview.library.GifView
        android:id="@+id/gif1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        custom:gif="@mipmap/signup_gif" />


</android.support.constraint.ConstraintLayout>
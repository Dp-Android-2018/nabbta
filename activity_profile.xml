<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">

    <android.support.v4.widget.CircleImageView
        android:id="@+id/image"
        android:layout_width="@dimen/dp98w"
        android:layout_height="@dimen/dp99h"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="@dimen/dp22w"
        android:layout_height="@dimen/dp22h"
        android:layout_marginStart="@dimen/dp26w"
        android:layout_marginTop="@dimen/dp33h"
        android:src="@drawable/user_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image"/>

    <EditText
        android:id="@+id/editText2"
        android:layout_width="@dimen/dp199w"
        android:layout_height="wrap_content"
        android:textCursorDrawable="@null"
        android:layout_marginStart="8dp"
        android:hint="@string/first_name"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sp10"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintStart_toEndOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/imageView7" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="@dimen/dp22w"
        android:layout_height="@dimen/dp22h"
        android:layout_marginTop="@dimen/dp26h"
        android:src="@drawable/user_icon"
        app:layout_constraintEnd_toEndOf="@+id/imageView7"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toBottomOf="@+id/imageView7" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="@dimen/dp199w"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:hint="@string/last_name"
        android:textColor="@android:color/black"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/sp10"
        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
        app:layout_constraintStart_toEndOf="@+id/imageView8"
        app:layout_constraintTop_toTopOf="@+id/imageView8" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="@dimen/dp23w"
        android:layout_height="@dimen/dp19h"
        android:layout_marginTop="@dimen/dp26h"
        android:src="@drawable/mail_icon"
        app:layout_constraintEnd_toEndOf="@+id/imageView8"
        app:layout_constraintStart_toStartOf="@+id/imageView8"
        app:layout_constraintTop_toBottomOf="@+id/imageView8" />

    <EditText
        android:layout_width="@dimen/dp199w"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:hint="@string/email_address"
        android:textCursorDrawable="@null"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sp10"
        app:layout_constraintBottom_toBottomOf="@+id/imageView9"
        app:layout_constraintStart_toEndOf="@+id/imageView9"
        app:layout_constraintTop_toTopOf="@+id/imageView9"
        android:inputType="textEmailAddress"/>

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="@dimen/dp23w"
        android:layout_height="@dimen/dp19h"
        android:layout_marginTop="@dimen/dp26h"
        android:src="@drawable/call_icon"
        app:layout_constraintEnd_toEndOf="@+id/imageView9"
        app:layout_constraintStart_toStartOf="@+id/imageView9"
        app:layout_constraintTop_toBottomOf="@+id/imageView9" />

    <EditText
        android:id="@+id/editText7"
        android:layout_width="@dimen/dp199w"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:hint="@string/phone"
        android:inputType="phone"
        android:textColor="@android:color/black"
        android:textColorLink="@color/text_color_green"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/sp10"
        app:layout_constraintBottom_toBottomOf="@+id/imageView10"
        app:layout_constraintStart_toEndOf="@+id/imageView10"
        app:layout_constraintTop_toTopOf="@+id/imageView10" />

    <Button
        android:layout_width="@dimen/dp148w"
        android:layout_height="@dimen/dp36h"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/dp48h"
        android:layout_marginEnd="8dp"
        android:background="@drawable/button_shape"
        android:text="Done"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText7" />

</android.support.constraint.ConstraintLayout>
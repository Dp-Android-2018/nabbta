<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:layout_editor_absoluteY="25dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/dp64w"
        android:layout_height="@dimen/dp55h"
        android:layout_marginTop="@dimen/dp56h"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Sign up to Nabbta"
        android:textColor="@color/text_color_green"
        android:textSize="@dimen/sp21"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="@dimen/dp17w"
        android:layout_height="@dimen/dp24h"
        android:layout_marginStart="@dimen/dp29w"
        android:layout_marginTop="@dimen/dp25w"
        android:src="@drawable/flag_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="@dimen/dp199w"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:focusable="false"
        android:textCursorDrawable="@null"
        android:hint="@string/country"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sp10"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintStart_toEndOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/imageView7" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="@dimen/dp17w"
        android:layout_height="@dimen/dp24h"
        android:layout_marginTop="@dimen/dp26h"
        android:src="@drawable/flag_icon"
        app:layout_constraintEnd_toEndOf="@+id/imageView7"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toBottomOf="@+id/imageView7" />

    <EditText
        android:layout_width="@dimen/dp199w"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:hint="@string/city"
        android:focusable="false"
        android:textCursorDrawable="@null"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sp10"
        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
        app:layout_constraintStart_toEndOf="@+id/imageView8"
        app:layout_constraintTop_toTopOf="@+id/imageView8" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="@dimen/dp23w"
        android:layout_height="@dimen/dp19h"
        android:layout_marginTop="@dimen/dp26h"
        android:src="@drawable/call_icon"
        app:layout_constraintEnd_toEndOf="@+id/imageView8"
        app:layout_constraintStart_toStartOf="@+id/imageView8"
        app:layout_constraintTop_toBottomOf="@+id/imageView8" />

    <EditText
        android:layout_width="@dimen/dp199w"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:hint="@string/phone"
        android:textCursorDrawable="@null"
        android:inputType="phone"
        android:textColor="@android:color/black"
        android:textColorLink="@color/text_color_green"
        android:textSize="@dimen/sp10"
        app:layout_constraintBottom_toBottomOf="@+id/imageView9"
        app:layout_constraintStart_toEndOf="@+id/imageView9"
        app:layout_constraintTop_toTopOf="@+id/imageView9" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="@dimen/dp15w"
        android:layout_height="@dimen/dp21h"
        android:layout_marginTop="@dimen/dp26h"
        android:src="@drawable/placeholder"
        app:layout_constraintEnd_toEndOf="@+id/imageView9"
        app:layout_constraintStart_toStartOf="@+id/imageView9"
        app:layout_constraintTop_toBottomOf="@+id/imageView9" />


    <EditText
        android:id="@+id/editText4"
        android:layout_width="@dimen/dp199w"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:hint="@string/address"
        android:inputType="textPassword"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sp10"
        android:textCursorDrawable="@null"
        app:layout_constraintBottom_toBottomOf="@+id/imageView10"
        app:layout_constraintStart_toEndOf="@+id/imageView10"
        app:layout_constraintTop_toTopOf="@+id/imageView10" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp29w"
        android:layout_marginTop="@dimen/dp25h"
        android:buttonTint="@color/text_color_green"
        android:textColorLink="@color/text_color_green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText4" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="You need to agree with our"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sp12"
        app:layout_constraintBottom_toBottomOf="@+id/checkBox"
        app:layout_constraintStart_toEndOf="@+id/checkBox"
        app:layout_constraintTop_toTopOf="@+id/checkBox" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="@string/policy"
        android:textColor="@color/text_color_green"
        android:textSize="@dimen/sp12"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.0" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/text_color_green"
        app:layout_constraintEnd_toEndOf="@+id/checkBox"
        app:layout_constraintStart_toStartOf="@+id/checkBox"
        app:layout_constraintTop_toBottomOf="@+id/checkBox" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="You need to agree with our"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sp11"
        app:layout_constraintBottom_toBottomOf="@+id/checkBox2"
        app:layout_constraintStart_toEndOf="@+id/checkBox2"
        app:layout_constraintTop_toTopOf="@+id/checkBox2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="@string/terms_and_conditions"
        android:textColor="@color/text_color_green"
        android:textSize="@dimen/sp11"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/textView4" />

    <Button
        android:id="@+id/button2"
        android:layout_width="@dimen/dp117w"
        android:layout_height="@dimen/dp32h"
        android:background="@drawable/button_shape"
        android:text="@string/sign_up"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp15_5"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp22h"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/checkBox2"/>
    <View
        android:id="@+id/view"
        android:layout_width="@dimen/dp104w"
        android:layout_height="9dp"
        android:layout_marginTop="@dimen/dp15h"
        android:background="@drawable/progress_bar_shape"
        app:layout_constraintEnd_toEndOf="@+id/button2"
        app:layout_constraintStart_toStartOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/button2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Step 2"
        android:textColor="@color/text_color_green"
        android:textSize="@dimen/sp10_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view"
        android:layout_marginTop="10dp"/>

</android.support.constraint.ConstraintLayout>
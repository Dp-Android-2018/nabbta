<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="@dimen/dp15w"
        android:layout_height="@dimen/dp21h"
        android:layout_marginStart="@dimen/dp47w"
        android:layout_marginTop="32dp"
        android:src="@drawable/password_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:layout_width="@dimen/dp199w"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:hint="@string/old_password"
        android:inputType="textPassword"
        android:textColor="@android:color/black"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/sp10"
        app:layout_constraintBottom_toBottomOf="@+id/imageView10"
        app:layout_constraintStart_toEndOf="@+id/imageView10"
        app:layout_constraintTop_toTopOf="@+id/imageView10" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="@dimen/dp15w"
        android:layout_height="@dimen/dp21h"
        android:layout_marginTop="@dimen/dp26h"
        android:src="@drawable/password_icon"
        app:layout_constraintEnd_toEndOf="@+id/imageView10"
        app:layout_constraintStart_toStartOf="@+id/imageView10"
        app:layout_constraintTop_toBottomOf="@+id/imageView10" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="@dimen/dp199w"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:hint="New Password"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sp10"
        android:textCursorDrawable="@null"
        app:layout_constraintBottom_toBottomOf="@+id/imageView11"
        app:layout_constraintStart_toEndOf="@+id/imageView11"
        app:layout_constraintTop_toTopOf="@+id/imageView11"
        android:inputType="textPassword"/>

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="@dimen/dp15w"
        android:layout_height="@dimen/dp21h"
        android:layout_marginStart="@dimen/dp47w"
        android:layout_marginTop="@dimen/dp26h"
        android:src="@drawable/password_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView11" />


    <EditText
        android:id="@+id/editText5"
        android:layout_width="@dimen/dp199w"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:hint="@string/password_confirmation"
        android:inputType="textPassword"
        android:textColor="@android:color/black"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/sp10"
        app:layout_constraintBottom_toBottomOf="@+id/imageView12"
        app:layout_constraintStart_toEndOf="@+id/imageView12"
        app:layout_constraintTop_toTopOf="@+id/imageView12" />

    <Button
        android:layout_width="@dimen/dp237w"
        android:layout_height="@dimen/dp36h"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/dp49h"
        android:layout_marginEnd="8dp"
        android:background="@drawable/button_shape"
        android:text="Change Password"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText5" />

</android.support.constraint.ConstraintLayout>